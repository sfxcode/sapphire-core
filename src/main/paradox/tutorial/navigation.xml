<AnchorPane fx:controller="NavigationController">
    <children>
        <HBox>
            <children>
                <Button onAction="#actionToggleWorkspace"
                        text="%navigation.toggle"/>
                <Button onAction="#actionShowPersonController"
                        text="FXBean Demo"/>
                <Button onAction="#actionClickButton"
                        text="Action Button"/>
                <Button id="debugButton" onAction="#actionReload"
                        text="[Debug] Reload"/>
            </children>
            <padding>
                <Insets left="10.0" top="7.0"/>
            </padding>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@default.css"/>
    </stylesheets>
</AnchorPane>
