<?xml version="1.0" encoding="UTF-8"?>

<?import com.sfxcode.sapphire.core.control.FXValueFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane styleClass="person" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sfxcode.sapphire.core.demo.tutorial.controller.PersonController">
    <children>
        <BorderPane maxHeight="300" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
             <TableView fx:id="tableView" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn prefWidth="50.0" text="ID">
                    <cellValueFactory>
                        <FXValueFactory property="id" />
                    </cellValueFactory>
                        </TableColumn>
                  <TableColumn prefWidth="100.0" text="Name">
                      <cellValueFactory>
                          <FXValueFactory property="name" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="50.0" text="Age">
                      <cellValueFactory>
                          <FXValueFactory property="age" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="200.0" text="Description">
                      <cellValueFactory>
                          <FXValueFactory property="Name: !{_self.name()} Age: !{_self.age()} (!{_self.id()}) " />
                      </cellValueFactory>
                  </TableColumn>
              </columns>
            </TableView>
         </center>
         <bottom>
             <VBox id="personDetail" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label id="person" prefHeight="16.0" prefWidth="226.0" text="Please select Person" />
                  <GridPane id="personPane" fx:id="editPane" maxWidth="250.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <TextField id="name" prefHeight="26.0" prefWidth="153.0" GridPane.columnIndex="1" />
                        <Label text="Name" />
                        <Label text="Age" GridPane.rowIndex="1" />
                        <TextField id="age" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button mnemonicParsing="false" onAction="#actionRevert" text="revert current data" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
               </children>
               <padding>
                   <Insets left="5.0" top="5.0" bottom="5.0"/>
               </padding></VBox>
         </bottom>
      </BorderPane>
    </children>
    <stylesheets>
        <URL value="@../default.css" />
    </stylesheets>
</AnchorPane>
